#include <iostream>
using namespace std;
int main() {
  int arr[5][2];
  arr[0][0] = -3;
  arr[0][1] = -2;
  arr[1][0] = -2;
  arr[1][1] = -2;
  arr[2][0] = 6;
  arr[2][1] = 1;
  arr[3][0] = 3;
  arr[3][1] = 9;
  arr[4][0] = -4;
  arr[4][1] = 9;

  int arr1[5][2];
  arr1[0][0] = -2;
  arr1[0][1] = -1;
  arr1[1][0] = 0;
  arr1[1][1] = -1;
  arr1[2][0] = 4;
  arr1[2][1] = 2;
  arr1[3][0] = 3;
  arr1[3][1] = 7;
  arr1[4][0] = -3;
  arr1[4][1] = 7;

  int S1 = 0;
  int S2 = 0;
  int b = 0;
  char tak = 'n';
  float dx1,dy1,dx,dy;
  float S;
  
  for(int i = 0; i < 5; i++){
    b = i;
    b++;
    if(b == 5){
      b = 0;
    } 
    S1 = S1 + (arr[i][0] * arr[b][1] - arr[i][1] * arr[b][0]);
    S2 = S2 + (arr1[i][0] * arr1[b][1] - arr1[i][1] * arr1[b][0]);
    dx1 = arr[b][0] - arr[i][0];
    dy1 = arr[b][1] - arr[i][1];

    dx = arr1[i][0] - arr[i][0];
    dy = arr1[i][1] - arr[i][1];

    S = dx1 * dy - dx * dy1;
    if(S<=0){
      cout<<"2 Багатокутник Не лежить строго в середині 1"<<endl;
      tak = 'y';
      break;
    }
    
  }
  S1 = S1/2;
  S2 = S2/2;
  if(tak == 'n'){
      cout<<"2 Багатокутник строго лежить в середині 1"<<endl;
  }
  cout<<"S1: "<<S1<<endl;
  cout<<"S2: "<<S2<<endl;
}
