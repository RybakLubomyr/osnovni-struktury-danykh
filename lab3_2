#include <iostream>
#include <string>
using namespace std;
int main()
{
    int a[] = {6,2,36,12};
    int max=0;
    int tmp;
    char c = 'n';

    for(int i=2; i < 9; i++){
       for(int j = 0; j < 4; j++){
            if(a[j]%i==0){
                tmp = i;
            } else {
                c = 'y';
            }
        }
        if(c == 'n'){
            max = tmp;
        } else {
            c='n';
        }
        
    }
       
    cout<<max<<endl;
    
    int NCK = 0;
   NCK = a[0] * a[1] * a[2]*a[3] / max;
       
    cout<<NCK<<endl;

}
